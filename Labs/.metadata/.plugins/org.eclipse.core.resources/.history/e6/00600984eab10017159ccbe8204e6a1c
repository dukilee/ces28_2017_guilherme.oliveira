package ex1;

public abstract class Letter {
	public Letter(Person sender, Person destinatary, Address addressDestiny, Date date){
		this.sender = new Person(sender.getName());
		this.destinatary = new Person(sender.getName());
		this.addressDestiny = new Address(addressDestiny.getValue());
		this.date = new Date(date.getValue());
	}

	protected Person sender;
	protected Person destinatary;
	protected Address addressDestiny;
	protected Date date;
}
